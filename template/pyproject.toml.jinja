black = "^21.4b2"
isort = "^5.8.0"
bandit = "^1.7.0"
flake8-bugbear = "^21.4.3"
pytest = "^6.2.3"
pretty-errors = "^1.2.19"

[tool.flakehell]
extended_default_ignore = []
